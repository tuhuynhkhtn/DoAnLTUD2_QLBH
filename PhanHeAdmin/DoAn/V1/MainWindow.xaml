<Window x:Class="V1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1200">
    <DockPanel LastChildFill="True">
        <!--Thuộc tính LastChildFill có giá trị mặc định true nhằm xác định các control thêm vào sau sẽ lấp đầy khoảng trống còn lại. Nếu bạn muốn giữ lại khoảng trống này, hãy gán giá trị của nó trở thành false.-->
        <Grid DockPanel.Dock="Top" Height="50" Name="grTop" />

        <Grid DockPanel.Dock="Bottom" Height="30">
            <Label>Bottom</Label>
        </Grid>
        
        <Grid DockPanel.Dock="Left" Width="198" Name="grLeft" />

        <Grid DockPanel.Dock="Right" Width="969" Name="grRight" />

    </DockPanel>
</Window>
